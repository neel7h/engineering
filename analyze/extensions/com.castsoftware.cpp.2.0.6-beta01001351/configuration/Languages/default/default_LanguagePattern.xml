<?xml version="1.0" encoding="utf-8"?>


<LanguagePattern id="default">



<version_num value="1.0">

	<!--¤¤¤¤¤¤¤¤¤¤¤¤¤¤¤¤¤¤¤¤¤-->
	<!-- LANGUAGE CHARACTERS -->
	<!--¤¤¤¤¤¤¤¤¤¤¤¤¤¤¤¤¤¤¤¤¤-->
	<language_characters>
		<!--<a>[a-zA-Z0-9_]</a>-->
        <a>[[:L*:][:Nd:]_]</a>
        <!--
            The character classes supported by Unicode Regular Expression:
                [:L*:] represent all Letter 
                [:Nd:] represent all Decimal Digit Number
        -->
    </language_characters>


	<!--¤¤¤¤¤¤¤¤¤¤¤¤¤¤¤¤¤¤¤¤¤-->
	<!-- COMMENTS -->
	<!--¤¤¤¤¤¤¤¤¤¤¤¤¤¤¤¤¤¤¤¤¤-->
	<comment>
		<begin>/\*</begin>
		<end>\*/</end>
	</comment>


	<!--¤¤¤¤¤¤¤¤¤¤¤¤¤¤¤¤¤¤¤¤¤-->
	<!-- STRING -->
	<!--¤¤¤¤¤¤¤¤¤¤¤¤¤¤¤¤¤¤¤¤¤-->
	<string>
		<begin>"</begin>
		<end>"</end>
		<escape_char>\</escape_char>
	</string>

	
</version_num>


</LanguagePattern>



