<?xml version="1.0" encoding="utf-8"?>
<METRIC PACKAGE_NAME="Essentiel Complexity.EssentialComplexity">
	<ACTIVE>YES</ACTIVE>
	<ACTION_LIST>
		<ACTION NAME="PERSISTENCE" >
				<INTERNAL_UID>1AE3873E-AE59-4813-8914-18CF33125148</INTERNAL_UID>
				<DESCRIPTION>Action qui permet de sauvegarder</DESCRIPTION>
				<ACTIVE>YES</ACTIVE>
		</ACTION>

		<ACTION NAME="CALCULATE CYCLOMATIC COMPLEXITY" >
				<INTERNAL_UID>9916FE48-BCD9-48d8-9480-D74915580A8C</INTERNAL_UID>
				<DESCRIPTION>Action qui permet de calculer la cyclomatique complexity sur un graph(V(G')</DESCRIPTION>
				<ACTIVE>YES</ACTIVE>
		</ACTION>		

		<ACTION NAME="CALCULATE FLOWCHART ev(G)" >
				<INTERNAL_UID>9B1A7338-015D-4db2-84D6-A1A005684B3F</INTERNAL_UID>
				<DESCRIPTION>Action qui permet de reduire le graph(V(G')) pour faire ev(G)</DESCRIPTION>
				<ACTIVE>YES</ACTIVE>
		</ACTION>		

		<ACTION NAME="CALCULATE  FLOWCHART Iv(G)" >
				<INTERNAL_UID>6F1CD241-647D-4a34-A241-1682772FCC81</INTERNAL_UID>
				<DESCRIPTION>Action qui permet de reduire le graph(V(G')) pour faire Iv(G)</DESCRIPTION>
				<ACTIVE>YES</ACTIVE>
		</ACTION>	
		
		<ACTION NAME="BUILD FLOW CHART" >
				<INTERNAL_UID>DF7DFA04-3869-41ca-B43A-F3603A8436F2</INTERNAL_UID>
				<DESCRIPTION>Action qui permet de faire des recherches dans l'arbre syntaxique</DESCRIPTION>
				<ACTIVE>YES</ACTIVE>
		</ACTION>				
			

	</ACTION_LIST>
	
	<CATEGORY_LIST>
		<CATEGORY NAME="Basic_Cyclomatic_Complexity">
			<PROPERTY NAME="VALUE" type="integer" />
			<ACTIVE>YES</ACTIVE>
			<ADD_ACTION NAME="CALCULATE CYCLOMATIC COMPLEXITY">
				<FLOWCHART>FLOWCHART.BASIC</FLOWCHART>
				<RESULT>VALUE</RESULT>
			</ADD_ACTION>
			<ADD_ACTION NAME="PERSISTENCE">
				<SAVE>VALUE</SAVE>
				<NAME>Basic Cyclomatic Complexity</NAME>				
			</ADD_ACTION>
		</CATEGORY>

		<CATEGORY NAME="Cyclomatic_Complexity">
			<PROPERTY NAME="VALUE" type="integer" />
			<ACTIVE>YES</ACTIVE>
			<ADD_ACTION NAME="CALCULATE CYCLOMATIC COMPLEXITY">
				<FLOWCHART>FLOWCHART.VALUE</FLOWCHART>
				<RESULT>VALUE</RESULT>
			</ADD_ACTION>
			<ADD_ACTION NAME="PERSISTENCE">
				<SAVE>VALUE</SAVE>
				<NAME>Cyclomatic Complexity</NAME>				
			</ADD_ACTION>
		</CATEGORY>

		<CATEGORY NAME="Essential_Complexity">
			<PROPERTY NAME="VALUE" type="integer" />
			<ACTIVE>YES</ACTIVE>
			<ADD_ACTION NAME="CALCULATE FLOWCHART ev(G)">
				<FLOWCHART>FLOWCHART.VALUE</FLOWCHART>
				<RESULT>VALUE</RESULT>
			</ADD_ACTION>
			<ADD_ACTION NAME="PERSISTENCE">
				<SAVE>VALUE</SAVE>
				<NAME>Essential Complexity</NAME>				
			</ADD_ACTION>
		</CATEGORY>

		<CATEGORY NAME="Integration_Complexity">
			<PROPERTY NAME="VALUE" type="integer" />
			<ACTIVE>YES</ACTIVE>
			<ADD_ACTION NAME="CALCULATE  FLOWCHART Iv(G)">
				<FLOWCHART>FLOWCHART.VALUE</FLOWCHART>
				<RESULT>VALUE</RESULT>
			</ADD_ACTION>
			<ADD_ACTION NAME="PERSISTENCE">
				<SAVE>VALUE</SAVE>
				<NAME>Integration Complexity</NAME>				
				</ADD_ACTION>
		</CATEGORY>		
	

		<CATEGORY NAME="FLOWCHART">		
			<PROPERTY NAME="BASIC" type="flowchart"/>
			<PROPERTY NAME="VALUE" type="flowchart"/>			
			<ADD_ACTION NAME="BUILD FLOW CHART">
				<ELEMENT_IF>MATCH_IF.VALUE</ELEMENT_IF>	
				<ELEMENT_ELSE>MATCH_ELSE.VALUE</ELEMENT_ELSE>								
				<ELEMENT_ELSEIF>MATCH_ELSEIF.VALUE</ELEMENT_ELSEIF>								
				<ELEMENT_RETURN>MATCH_RETURN.VALUE</ELEMENT_RETURN>								
				<ELEMENT_FOR>MATCH_FOR.VALUE</ELEMENT_FOR>
				<ELEMENT_WHILE>MATCH_WHILE.VALUE</ELEMENT_WHILE>
				<ELEMENT_DO_WHILE>MATCH_DO_WHILE.VALUE</ELEMENT_DO_WHILE>
				<ELEMENT_SWITCH>MATCH_SWITCH.VALUE</ELEMENT_SWITCH>
				<ELEMENT_CASE>MATCH_CASE.VALUE</ELEMENT_CASE>
				<ELEMENT_BREAK>MATCH_BREAK.VALUE</ELEMENT_BREAK>
				<ELEMENT_CONTINUE>MATCH_CONTINUE.VALUE</ELEMENT_CONTINUE>
				<ELEMENT_CALL>MATCH_CALL.VALUE</ELEMENT_CALL>
				<ELEMENT_AND_OR>MATCH_AND_OR.VALUE</ELEMENT_AND_OR>
				<ELEMENT_RAISE>MATCH_RAISE.VALUE</ELEMENT_RAISE>
				<ELEMENT_GOTO>MATCH_GOTO.VALUE</ELEMENT_GOTO>
				<ELEMENT_TRY>MATCH_TRY.VALUE</ELEMENT_TRY>
				<ELEMENT_CATCH>MATCH_CATCH.VALUE</ELEMENT_CATCH>
				<ELEMENT_CODE_BLOCK>MATCH_CODE_BLOCK.VALUE</ELEMENT_CODE_BLOCK>
				<ELEMENT_PERFORM>MATCH_PERFORM.VALUE</ELEMENT_PERFORM>
				<RESULT_BASIC>BASIC</RESULT_BASIC>

				<RESULT>VALUE</RESULT>
			</ADD_ACTION>				
		</CATEGORY>

		<CATEGORY NAME="MATCH_CYCLOMATIC_JCL">
			<PROPERTY NAME="VALUE" type="integer" /> 
			<PROPERTY NAME="BASIC_VALUE" type="integer" /> 
			<PROPERTY NAME="CYCLOMATIC_JCL" type="regexp_pattern">
				<LANGUAGE>JCL-LANGUAGE</LANGUAGE>
				<INIT>1</INIT>
				<SEARCH_IN_CODE>Yes</SEARCH_IN_CODE>
				<SEARCH_IN_COMMENT>No</SEARCH_IN_COMMENT>
				<SEARCH_IN_STRING>No</SEARCH_IN_STRING>
				<SEARCH_CASE_SENSITIVE>No</SEARCH_CASE_SENSITIVE>

				<REGEXP>IF</REGEXP>	
				<REGEXP><![CDATA[[[:Zs:]\t]&[[:Zs:]\t]]]></REGEXP>
				<REGEXP>\|</REGEXP>	
			</PROPERTY>

			<PROPERTY NAME="BASIC_CYCLOMATIC_JCL" type="regexp_pattern">
				<LANGUAGE>JCL-LANGUAGE</LANGUAGE>
				<INIT>1</INIT>
				<SEARCH_IN_CODE>Yes</SEARCH_IN_CODE>
				<SEARCH_IN_COMMENT>No</SEARCH_IN_COMMENT>
				<SEARCH_IN_STRING>No</SEARCH_IN_STRING>
				<SEARCH_CASE_SENSITIVE>No</SEARCH_CASE_SENSITIVE>

				<REGEXP>IF</REGEXP>	
			</PROPERTY>

			<ADD_ACTION NAME="MATCH">
				<MATCH>BASIC_CYCLOMATIC_JCL</MATCH>
				<CLASS>JCL_CLASS.CLASS</CLASS>
				<SOURCE_CODE>OBJECT.SOURCECODE</SOURCE_CODE>
				<VALUE_OUTPUT>BASIC_VALUE</VALUE_OUTPUT>
			</ADD_ACTION>

			<ADD_ACTION NAME="MATCH">
				<MATCH>CYCLOMATIC_JCL</MATCH>
				<CLASS>JCL_CLASS.CLASS</CLASS>
				<SOURCE_CODE>OBJECT.SOURCECODE</SOURCE_CODE>
				<VALUE_OUTPUT>VALUE</VALUE_OUTPUT>
			</ADD_ACTION>

			<ADD_ACTION NAME="PERSISTENCE">
				<SAVE>BASIC_VALUE</SAVE>
				<NAME>Basic Cyclomatic Complexity</NAME>				
			</ADD_ACTION>

			<ADD_ACTION NAME="PERSISTENCE">
				<SAVE>VALUE</SAVE>
				<NAME>Cyclomatic Complexity</NAME>				
			</ADD_ACTION>

		</CATEGORY>


	</CATEGORY_LIST>
</METRIC>
