<?xml version="1.0" encoding="utf-8"?>
<METRIC PACKAGE_NAME="VB.OptionExplicit">
	<ACTIVE>YES</ACTIVE>
	<ACTION_LIST>
			<ACTION NAME="MATCH IN TREE ELEMENT" >
					<INTERNAL_UID>8033D1FB-9FAB-4fcc-99A8-3ECD667C2889</INTERNAL_UID>
					<ACTIVE>YES</ACTIVE>
			</ACTION>
		<ACTION NAME="PERSISTENCE" >
				<INTERNAL_UID>1AE3873E-AE59-4813-8914-18CF33125148</INTERNAL_UID>
				<ACTIVE>YES</ACTIVE>
		</ACTION>
	</ACTION_LIST>
	
	<CATEGORY_LIST>		
		<CATEGORY NAME="MATCH_OPTIONEXPLICIT">
			<PROPERTY NAME="VALUE" type="integer" /> 
			
			<PROPERTY NAME="OPTIONEXPLICIT" type="pattern">
				<TREE>
					<OR>						
						<SIGNATURE>NODE_VB6_STATEMENT_DECLARE_LIST</SIGNATURE>						
					</OR>
					<TREE>
						<OR>						
							<SIGNATURE>NODE_VB6_OPTION_STATEMENT</SIGNATURE>													
						</OR>
														
						<SUB_TREE_OR>						
							<TOKEN NAME="IDENTIFIER" EQUAL="Explicit"  /> 												
						</SUB_TREE_OR>
					</TREE>
				</TREE>
			</PROPERTY>

			<PROPERTY NAME="VB_SCRIPT_OPTIONEXPLICIT" type="pattern">
				<TREE>
					<OR>						
						<SIGNATURE>NODE_VBS5_Script</SIGNATURE>						
					</OR>
					<TREE>
						<OR>						
							<SIGNATURE>NODE_VBS5_OptionExplicitStatement</SIGNATURE>													
						</OR>
														
						<SUB_TREE_OR>						
							<TOKEN NAME="IDENTIFIER" EQUAL="Explicit"  /> 												
						</SUB_TREE_OR>
					</TREE>
				</TREE>
			</PROPERTY>

			<PROPERTY NAME="NET_OPTIONEXPLICIT" type="pattern">
				<TREE>
					<OR>						
						<SIGNATURE>NODE_VbNet_FUNCTION</SIGNATURE>
						<SIGNATURE>NODE_VbNet_SUB</SIGNATURE>																								
					</OR>
					<SUB_TREE_OR>						
						<TOKEN NAME="_OPTION_"/> 												
						<TOKEN NAME="IDENTIFIER" EQUAL="Explicit"  /> 												
					</SUB_TREE_OR>
				</TREE>
			</PROPERTY>

			<ADD_ACTION NAME="MATCH IN TREE ELEMENT">
				<MATCH>VB_SCRIPT_OPTIONEXPLICIT</MATCH>
				<MATCH>NET_OPTIONEXPLICIT</MATCH> 				
				<MATCH>OPTIONEXPLICIT</MATCH> 				
				<TOKEN>TOKEN_AND_TREE_ELEMENT.TOKEN_VALUE</TOKEN> 
				<SIGNATURE>TOKEN_AND_TREE_ELEMENT.SIGNATURE_VALUE</SIGNATURE> 
				<RESULT_COUNT>VALUE</RESULT_COUNT> 
			</ADD_ACTION>

			<ADD_ACTION NAME="PERSISTENCE">
				<SAVE>VALUE</SAVE>
				<NAME>Option Explicit Set</NAME>				
			</ADD_ACTION>

		</CATEGORY>

		<CATEGORY NAME="MATCH_OPTION_EXPLICIT">
			<PROPERTY NAME="VALUE" type="integer" /> 
			<PROPERTY NAME="GREP_OR_IE" type="integer" /> 
			<PROPERTY NAME="REGEXP_OPTION_EXPLICIT" type="regexp_pattern">	
				<LANGUAGE>VB-LANGUAGE</LANGUAGE>			
				<SEARCH_IN_CODE>Yes</SEARCH_IN_CODE>
				<SEARCH_IN_COMMENT>No</SEARCH_IN_COMMENT>
				<SEARCH_IN_STRING>No</SEARCH_IN_STRING>
				<SEARCH_IN_EMBEDDEDSQL>No</SEARCH_IN_EMBEDDEDSQL>
				<SEARCH_CASE_SENSITIVE>No</SEARCH_CASE_SENSITIVE>
				<REGEXP>option[[:Zs:]\t]+Explicit</REGEXP>
			</PROPERTY>

			<ADD_ACTION NAME="MATCH">
				<MATCH>REGEXP_OPTION_EXPLICIT</MATCH>
				<CLASS>VB_FORM_MODULE_CLASS.CLASS</CLASS>
				<SOURCE_CODE>OBJECT.SOURCECODE</SOURCE_CODE>
				<VALUE_OUTPUT>VALUE</VALUE_OUTPUT>
			</ADD_ACTION>

			<ADD_ACTION NAME="PERSISTENCE">
				<SAVE>VALUE</SAVE>				
				<NAME>Option Explicit Set</NAME>				
			</ADD_ACTION>

		</CATEGORY> 

	</CATEGORY_LIST>
</METRIC>
